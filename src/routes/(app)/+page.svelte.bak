<script lang="ts">
  import { onMount } from 'svelte';
  import { authStore, currentUser } from '../../application/stores/authStore';
  import { AuthService } from '../../lib/services/AuthService';
  import { goto } from '$app/navigation';

  let user = $state<{ id: string; email: string; name: string; created_at: string } | null>(null);
  let isLoading = $state(true);

  onMount(async () => {
    authStore.subscribe((state) => {
      if (state.user) {
        user = state.user;
      }
    });

    isLoading = false;
  });

  async function handleLogout() {
    const authService = AuthService.getInstance();
    await authService.logout();
  }
</script>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Dashboard</h1>
    
    {#if isLoading}
      <div class="flex justify-center items-center h-32">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-gray-900"></div>
      </div>
    {:else}
      {#if user}
        <div class="mb-6">
          <h2 class="text-xl font-semibold text-gray-800">Welcome back, {user.name}!</h2>
          <p class="text-gray-600 mt-2">Your account: {user.email}</p>
          <p class="text-gray-500 text-sm mt-1">Member since {new Date(user.created_at).toLocaleDateString()}</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-blue-50 p-4 rounded-lg">
            <h3 class="font-medium text-blue-800">Profile</h3>
            <p class="text-sm text-blue-600 mt-2">Manage your account settings</p>
          </div>
          <div class="bg-green-50 p-4 rounded-lg">
            <h3 class="font-medium text-green-800">Tasks</h3>
            <p class="text-sm text-green-600 mt-2">View and manage your tasks</p>
          </div>
          <div class="bg-purple-50 p-4 rounded-lg">
            <h3 class="font-medium text-purple-800">Settings</h3>
            <p class="text-sm text-purple-600 mt-2">Configure app preferences</p>
          </div>
        </div>
        
        <div class="mt-8">
          <button
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
            on:click={handleLogout}
          >
            Sign out
          </button>
        </div>
      {:else}
        <p class="text-gray-600">You are not authenticated. Please <a href="/login" class="text-indigo-600 hover:text-indigo-500">log in</a>.</p>
      {/if}
    {/if}
  </div>
</div>